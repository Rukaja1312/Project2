@model IEnumerable<Application.DTOs.CarViewDTO>

@{
    ViewData["Title"] = "My Cars";
}

<h1>My Cars</h1>

<p>
    <a asp-controller="Cars" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                Options
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @if (item.Image != null)
                    {
                        <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Image))" style="width:180px;height:180px;" />
                    }
                </td>
                <td>
                    <a asp-controller="Cars" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-controller="Cars" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>